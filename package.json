{
  "name": "destygo-chat-load-test",
  "version": "1.0.0",
  "description": "Main load test for Destygo Chat: 1 virtual user = 1 session = 1 conversation = 1 message (simultaneous send)",
  "main": "send-messages-test.js",
  "scripts": {
    "test": "node send-messages-test.js",
    "test:access": "node test-puppeteer-access.js",
    "test:connection": "node connection-load-test.js",
    "test:connection:quick": "DESTYGO_NUMBER_OF_USERS=10 DESTYGO_TEST_DURATION=30 node connection-load-test.js",
    "test:connection:medium": "DESTYGO_NUMBER_OF_USERS=50 DESTYGO_TEST_DURATION=60 node connection-load-test.js",
    "test:connection:large": "DESTYGO_NUMBER_OF_USERS=100 DESTYGO_TEST_DURATION=120 node connection-load-test.js",
    "test:quick": "DESTYGO_NUMBER_OF_USERS=5 node send-messages-test.js",
    "test:medium": "DESTYGO_NUMBER_OF_USERS=20 node send-messages-test.js",
    "test:large": "DESTYGO_NUMBER_OF_USERS=40 node send-messages-test.js",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t destygo-load-test .",
    "docker:compose:build": "docker-compose build"
  },
  "author": "Destygo Chat Engineering Team",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.21.2",
    "puppeteer": "^24.10.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/viasay/destygo-chat-performance-tests.git"
  },
  "bugs": {
    "url": "https://github.com/viasay/destygo-chat-performance-tests/issues"
  },
  "homepage": "https://github.com/viasay/destygo-chat-performance-tests#readme",
  "files": [
    "*.js",
    "*.md",
    "env.example",
    "package.json"
  ],
  "bin": {
    "destygo-perf-test": "./send-messages-test.js"
  },
  "preferGlobal": false,
  "publishConfig": {
    "access": "private"
  }
}
